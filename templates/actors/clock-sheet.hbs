<form class="{{cssClass}} clock-block" autocomplete="off">

    <div class="flexcol forged-clock-name-type">
        {{#if editable}}
        <input type="text" id="{{actor._id}}-clock-name" name="name" value="{{actor.name}}">

        <select data-type="String" name="data.type">
            {{#select data.type}}
            <option value="4">4</option>
            <option value="6">6</option>
            <option value="8">8</option>
            {{/select}}
        </select>
        {{/if}}

        <div class="clocks clocks-{{data.type}}">
            {{{forged-clock "data.value" data.type data.value item._id}}}
        </div>
    </div>
</form>